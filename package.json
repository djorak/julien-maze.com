{
  "name": "julien-maze.com",
  "version": "0.0.1",
  "description": "Personnal website of Julien Mazé - Web Developer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djorak/julien-maze.com.git"
  },
  "author": "Julien <Djorak> Mazé",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/djorak/julien-maze.com/issues"
  },
  "homepage": "http://www.julien-maze.com",
  "scripts": {
    "watch:css": "nodemon --ext scss -x \"npm run build:css\"",
    "build": "./build.sh",
    "build:copy:fonts": "cp -R node_modules/font-awesome/fonts dist/fonts",
    "build:css": "node-sass webapp/scss/styles.scss dist/css/styles.css",
    "postbuild:css": "postcss --use autoprefixer --use cssnano --replace dist/css/styles.css",
    "push-dist": "git subtree push --prefix dist origin gh-pages"
  },
  "dependencies": {
    "font-awesome": "^4.6.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "cssnano": "^3.7.4",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.2",
    "postcss-cli": "^2.5.2"
  }
}
